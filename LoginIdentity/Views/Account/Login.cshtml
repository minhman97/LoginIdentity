@model LoginViewModel

@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="container">
        <section>
            <form id="account" method="post">
                <div class="d-flex justify-content-center align-items-center my-4">
                    <div class="card d-flex justify-content-center align-items-center" style="width: 30rem;">
                        <div class="card-body" style="width:70%;height: 93vh">
                            <div class="py-md-4">
                                <h1>Login</h1>
                            </div>
                            <div class="form-group">
                                <span>Username</span>
                                <input type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <span>Password</span>
                                <input type="password" class="form-control">
                            </div>
                            <div class="form-group d-flex justify-content-end pt-1 pb-md-4">
                                <a href="#" class="text-decoration-none">Forgot password?</a>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary form-control">
                                    Login;++5/
                                </button>
                            </div>
                            <div class="form-group d-flex justify-content-center align-items-center pt-3">
                                <div>
                                    <div class="pb-3">Or Sign Up Using</div>
                                    <div class="form-group d-flex justify-content-center align-items-center">
                                        <a href="#" class="text-decoration-none">SIGN UP</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}