@model LoginViewModel

@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Log in";
}


<form method="post">
    <div class="py-md-4">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="form-group">
        <span>Username</span>
        <input asp-for="Email" type="text" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <span>Password</span>
        <input asp-for="Password" type="password" class="form-control">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group d-flex justify-content-end pt-1 pb-md-4">
        <a href="#" class="text-decoration-none">Forgot password?</a>
    </div>
    <div class="form-group">
        <button class="btn btn-primary form-control">
            Login
        </button>
    </div>
    <div class="form-group d-flex justify-content-center align-items-center pt-3">
        <div>
            <div class="pb-3">Or Sign Up Using</div>
            <div class="form-group d-flex justify-content-center align-items-center">
                <a asp-action="Register" class="text-decoration-none">SIGN UP</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}